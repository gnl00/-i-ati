{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*",
    "src/mcp/**/*",
    "src/constants/**/*",
    "src/config/**/*",
    "src/tools/**/*"
  ],
  "exclude": [
      "src/tools/renderer/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@mcp/*": [
        "src/mcp/*"
      ],
      "@tools/*": [
        "src/tools/*"
      ]
    }
  }
}