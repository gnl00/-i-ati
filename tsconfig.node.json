{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*",
    "src/mcp/**/*",
    "src/constants/**/*",
    "src/renderer/src/config/**/*",
    "src/shared/**/*",
    "src/main/tools/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/main/*"
      ],
      "@main-tools/*": [
        "src/main/tools/*"
      ],
      "@request/*": [
        "src/main/request/*"
      ],
      "@mcp/*": [
        "src/mcp/*"
      ],
      "@tools/*": [
        "src/shared/tools/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ]
    }
  }
}
