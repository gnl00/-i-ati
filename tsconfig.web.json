{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
    "src/constants/**/*",
    "src/renderer/src/config/**/*",
    "src/types/**/*",
    "src/shared/**/*",
    "src/renderer/src/tools/**/*",
    "src/renderer/data/**/*",
    "resources/**/*",
    "data/**/*"
  ],
  "exclude": [
    "src/main/tools/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@config/*": [
        "src/renderer/src/config/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "@resources/*": [
        "resources/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@tools/*": [
        "src/shared/tools/*"
      ],
      "@renderer-tools": [
        "src/renderer/src/tools/index.ts"
      ],
      "@renderer-tools/*": [
        "src/renderer/src/tools/*"
      ]
    }
  }
}
